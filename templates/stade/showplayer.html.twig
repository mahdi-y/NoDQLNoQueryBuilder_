{% block body %}
    <h1 class="mt-4">Liste des joueurs</h1>
    <div class="row mt-4">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <a href ="{{path('player_add')}}">Add</a>
                    <tr>
                        <th scope="col">list of players</th>
                        <th scope="col">name</th>
                        <th scope="col">surname</th>
                        <th scope="col">stade</th>
                    </tr>
                </thead>
                <tbody>
                    {% for player in players %}
                    <tr>
                        <td>{{ player.name }}</td>
                        <td>{{ player.Surname }}</td>
                        <td>{{ player.Stade.name }}
                        <td>
                            <a href="{{ path('player_update', {'id': player.id}) }}" class="btn btn-primary">Update</a>
                            <a href="{{ path('player_delete', {'id': player.id}) }}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
